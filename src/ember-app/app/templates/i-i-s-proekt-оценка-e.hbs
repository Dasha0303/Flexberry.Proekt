<h3 class="ui header">{{t "forms.i-i-s-proekt-оценка-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-оценка-e.датаПроведения-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаПроведения
      class=(if (v-get validationModel "датаПроведения" "isInvalid") "error")
      data-test-i-i-s-proekt-оценка-e-датаПроведения=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаПроведения" "message")}}
  </div>
  <div class="field" data-test-i-i-s-proekt-оценка-e-статус="true">
    <label>{{t "forms.i-i-s-proekt-оценка-e.статус-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-proekt-статусы")
      value=model.статус
      class=(if (v-get validationModel "статус" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "статус" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.комментарии
      class=(if (v-get validationModel "комментарии" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-оценка-e.комментарии-caption")
      data-test-i-i-s-proekt-оценка-e-комментарии=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "комментарии" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-оценка-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-proekt-оценка-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-proekt-оценка-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
</form>
